<%- include("partials/header") %>

<div class="container">
    <!-- same thing as a div -->
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp! </h1>
            <p>View our handpicked campgrounds from all over the world. </p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3> Our most popular Campgrounds! </h3>
        </div>
    </div>

    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail thumbnail-resize">
                    <img src="<%= campground['image'] %>" class="image">
                    <div class="py-2 text-center">
                        <h4><%= campground['name'] %></h4>
                    </div>
                    <!-- Use MongoDB given ID for each campground-->
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("partials/footer") %>
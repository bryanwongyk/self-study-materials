<%- include("../partials/header") %>

<div class="container">
    <div class="row d-block">
        <h1> Add New Comment to <%= campground.name %></h1>
        <div class="form">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <!-- Form-group groups inputs together by adding a bit of margin at the bottom-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block"> Submit! </button>
                </div>
            </form>

            <a href="/campgrounds"> Go Back </a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container">
    <div class="row d-block">
        <h1> Edit Comment</h1>
        <div class="form">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <!-- Form-group groups inputs together by adding a bit of margin at the bottom-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="text" required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-dark btn-block"></input>
                </div>
            </form>

            <a href="/campgrounds"> Go Back </a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
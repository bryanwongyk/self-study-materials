<%- include("partials/header") %>

<div class="ui main text container">
        <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment"> <%# Segment creates those line dividing rectangles around entire body %>
        <div class="ui divided items"> <%# this divides each blog post with a line%>
            <% blogs.forEach(blog =>{ %>
                <div class="item">
                    <div class="image"> <%#This helps constrain the size of the image so that it doesnt take up the entire screen and is resized %>
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <%# Make header clickable to enter the post %>
                        <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %> </a>
                        <div class="meta">
                            <%# Put information about the item/blog post %>
                            <span> <%= blog.created %> </span>
                        </div>
                        <div class="description">
                            <%# only show first 100ish characters of blog body %>
                            <p> <%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                Read More <i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div> 
</div>


<%- include("partials/footer") %>